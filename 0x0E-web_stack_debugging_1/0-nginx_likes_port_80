#!/usr/bin/env bash
# Enables nginx to listen on port 80

NEW_CONFIG="server {\n\tlisten 80 default_server;\n\tlisten [::]:80 default_server;\n\troot /var/www/html;\n\tindex index.html index.htm index.nginx-debian.html;\n\tserver_name _;\n\tlocation / {\n\t\ttry_files \$uri \$uri/ =404;\n\t}\n}"
echo -e "$NEW_CONFIG" > /etc/nginx/sites-enabled/default
service nginx restart
